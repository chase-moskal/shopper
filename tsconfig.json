{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "source",
		"outDir": "dist",
		"target": "esnext",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"sourceMap": true,
		"declaration": true
	},
	"include": [
		"source/**/*.tsx",
		"source/**/*.ts", "source-old/shopper-demo.ts"
	],
	"exclude": [
		"source-old/**"
	]
}
